{
  "compilerOptions": {
    "outDir": "./dist",
    "baseUrl": "./src",
    "skipLibCheck": true,
    "pretty": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "inlineSourceMap": true,
    "experimentalDecorators": true,
    "target": "es6",
    "lib": [
      "esnext"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "tests/**/*.ts"
  ]
}